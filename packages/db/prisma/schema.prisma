// packages/db/prisma/schema.prisma

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  deadlines Deadline[]
  documents Document[]
  messages  Message[]
}

model Deadline {
  id       String   @id @default(cuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  title    String
  dueDate  DateTime
}

model Document {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type             String   // "invoice", "contract", "tax-document", etc.
  status           String   @default("pending") // "pending", "analyzed", "error"
  fileUrl          String?
  analyzedByPython Boolean  @default(false)
  analysisResult   Json?    // OCR-Ergebnisse als JSON
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model Message {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content     String
  senderType  String   // "user", "consultant", "system"
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model ConsultingBooking {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  consultantId String   // ID des Beraters (sp√§ter eigenes Model)
  date         DateTime
  status       String   @default("pending") // "pending", "confirmed", "cancelled", "completed"
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([consultantId])
  @@index([date])
}

model TaxUpdate {
  id          String   @id @default(cuid())
  title       String
  content     String
  category    String   // "vat", "income-tax", "trade-tax", etc.
  source      String   // "finanzamt", "ihk", "bundesanzeiger", etc.
  publishedAt DateTime
  createdAt   DateTime @default(now())

  @@index([category])
  @@index([publishedAt])
}