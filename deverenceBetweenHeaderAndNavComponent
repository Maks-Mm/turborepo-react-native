function TrustItem({ label, value }: { label: string; value: string }) {
  return (
    <div style={{ textAlign: "center" }}>
      <div style={{ fontSize: "1.5rem", fontWeight: 700 }}>{label}</div>
      <div
        style={{
          fontSize: "0.9rem",
          color: "rgba(255,255,255,0.7)",
          whiteSpace: "nowrap",
        }}
      >
        {value}
      </div>
    </div>
  );
}

function Divider() {
  return (
    <div
      style={{
        width: "1px",
        height: "30px",
        background: "rgba(255,255,255,0.2)",
      }}
    />
  );
}
